<UserControl x:Class="Kato.vNext.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kato.vNext.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding SettingsViewModel, Source={StaticResource Locator}}">
    <Grid>
            <Button  Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Left" Content="CLEAR DATA" Command="{Binding ClearDataCommand}"/>
    </Grid>
</UserControl>
